<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
	<navigation-rule>
		<from-view-id>/pages/inputname.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>greeting</from-outcome>
			<to-view-id>/pages/greeting.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- custom validation -->
	<validator>
		<validator-id>EmptyFieldValidator</validator-id>
		<validator-class>das.tickets.validator.EmptyFieldValidator</validator-class>
	</validator>
	<validator>
		<validator-id>UserNameLengthValidator</validator-id>
		<validator-class>das.tickets.validator.UserNameLengthValidator</validator-class>
	</validator>
	<validator>
		<validator-id>UserPasswordLengthValidator</validator-id>
		<validator-class>das.tickets.validator.UserPasswordLengthValidator</validator-class>
	</validator>
	<validator>
		<validator-id>UserEmailLengthValidator</validator-id>
		<validator-class>das.tickets.validator.UserEmailLengthValidator</validator-class>
	</validator>
	<validator>
		<validator-id>UserFirstNameValidator</validator-id>
		<validator-class>das.tickets.validator.UserFirstNameLengthValidator</validator-class>
	</validator>
	<validator>
		<validator-id>UserLastNameValidator</validator-id>
		<validator-class>das.tickets.validator.UserLastNameLengthValidator</validator-class>
	</validator>
	<validator>
		<validator-id>UserNamePatternValidator</validator-id>
		<validator-class>das.tickets.validator.UserNamePatternValidator</validator-class>
	</validator>
	<validator>
		<validator-id>UserPasswordPatternValidator</validator-id>
		<validator-class>das.tickets.validator.UserPasswordPatternValidator</validator-class>
	</validator>
	<validator>
		<validator-id>UserEmailPatternValidator</validator-id>
		<validator-class>das.tickets.validator.UserEmailPatternValidator</validator-class>
	</validator>
	<validator>
		<validator-id>UserFirstNamePatternValidator</validator-id>
		<validator-class>das.tickets.validator.UserFirstNamePatternValidator</validator-class>
	</validator>
	<validator>
		<validator-id>UserLastNamePatternValidator</validator-id>
		<validator-class>das.tickets.validator.UserLastNamePatternValidator</validator-class>
	</validator>
	<validator>
		<validator-id>UserPasswordConfirmationValidator</validator-id>
		<validator-class>das.tickets.validator.UserPasswordConfirmationValidator</validator-class>
	</validator>
	<validator>
		<validator-id>UserNameUniquenessValidator</validator-id>
		<validator-class>das.tickets.validator.UserNameUniquenessValidator</validator-class>
	</validator>
	<validator>
		<validator-id>UserEmailUniquenessValidator</validator-id>
		<validator-class>das.tickets.validator.UserEmailUniquenessValidator</validator-class>
	</validator>
	<application>
		<resource-bundle>
			<base-name>resources</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>
</faces-config>
